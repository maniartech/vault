{
  "name": "vault-storage",
  "description": "Vault, a micro yet robust browser storage library",
  "version": "2.0.0-alpha.1",
  "type": "module",
  "author": "ManiarTechÂ® - Mohamed Aamir Maniar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:maniartech/vault.git"
  },
  "keywords": [
    "vault",
    "vault-storage",
    "storage",
    "indexeddb",
    "idb",
    "database",
    "client-storage",
    "key-value",
    "offline-storage",
    "web-storage",
    "data-persistence",
    "proxy",
    "asynchronous",
    "local-storage",
    "data-management",
    "browser-database",
    "nosql",
    "indexdb-wrapper",
    "browser-storage",
    "data-cache",
    "javascript-storage",
    "persistent-storage"
  ],
  "main": "./dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
  "import": "./dist/index.mini.js",
  "require": "./dist/index.mini.js",
  "types": "./dist/index.mini.d.ts"
    },
    "./backup": {
      "import": "./dist/backup.js",
      "require": "./dist/backup.js",
      "types": "./dist/backup.d.ts"
    },
    "./middlewares": {
      "import": "./dist/middlewares/index.js",
      "require": "./dist/middlewares/index.js",
      "types": "./dist/middlewares/index.d.ts"
    },
    "./middlewares/validation": {
      "import": "./dist/middlewares/validation.js",
      "require": "./dist/middlewares/validation.js",
      "types": "./dist/middlewares/validation.d.ts"
    },
    "./middlewares/expiration": {
      "import": "./dist/middlewares/expiration.js",
      "require": "./dist/middlewares/expiration.js",
      "types": "./dist/middlewares/expiration.d.ts"
    },
    "./middlewares/encryption": {
      "import": "./dist/middlewares/encryption.js",
      "require": "./dist/middlewares/encryption.js",
      "types": "./dist/middlewares/encryption.d.ts"
    },
    "./vault": {
      "import": "./dist/vault.js",
      "require": "./dist/vault.js",
      "types": "./dist/vault.d.ts"
    },
  "./encrypted-vault": {
      "import": "./dist/encrypted-vault.js",
      "require": "./dist/encrypted-vault.js",
      "types": "./dist/encrypted-vault.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "./dist/"
  ],
  "sideEffects": false,
  "scripts": {
    "test": "karma start karma.conf.cjs --single-run",
    "test:browser": "karma start karma.conf.cjs",
    "clean": "node clean.js",
    "build:types": "tsc",
    "build:vault": "node ./build.js && npm run build:types",
  "build": "npm run clean && npm run build:vault && npm run build:types",
  "size": "node ./scripts/gzip-and-measure.js",
  "size:check": "node ./scripts/gzip-and-measure.js --check",
  "size:bundle": "node ./scripts/gzip-and-measure.js --bundle",
  "size:bundle:check": "node ./scripts/gzip-and-measure.js --bundle --check",
    "watch": "node ./build.js --watch --debug",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@types/jasmine": "^5.1.4",
    "@types/node": "^20.10.6",
    "esbuild": "^0.19.11",
    "jasmine-core": "^5.1.1",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-firefox-launcher": "^2.1.2",
    "karma-jasmine": "^5.1.0",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-spec-reporter": "^0.0.36",
    "karma-typescript": "^5.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}